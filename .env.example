# VK Teams Bot Configuration
# Copy this file to .env and fill in your values

# Required: VK Teams Bot API Token
VKTEAMS_BOT_API_TOKEN=your_bot_token_here

# Required: Default Chat ID for operations
VKTEAMS_BOT_CHAT_ID=your_chat_id_here

# Optional: VK API URL (default: https://api.vk.com)
VKTEAMS_BOT_API_URL=https://api.vk.com

# Database Configuration
DB_PASSWORD=vkteams_password

# Optional: Embedding Configuration
EMBEDDING_PROVIDER=ollama
EMBEDDING_MODEL=nomic-embed-text
EMBEDDING_ENDPOINT=http://ollama:11434

# Optional: OpenAI API Key (if using OpenAI embeddings)
# EMBEDDING_API_KEY=your_openai_api_key

# Optional: Logging Level
RUST_LOG=info

# Optional: Daemon configuration
DAEMON_AUTO_SAVE=true
DAEMON_POLL_INTERVAL=30

# Optional: Build configuration (for development)
BUILD_DATE=
BUILD_VERSION=latest
BUILD_COMMIT=

# Optional: Development settings
RUST_BACKTRACE=1